{
    "compilerOptions": {
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "baseUrl": "./src",
      "allowJs": true,
      "moduleResolution": "node",
      "esModuleInterop": true,
      "module": "CommonJS",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "preserveConstEnums": true,
      "allowSyntheticDefaultImports": true,
      "paths": {
        "@/*": [
          "./*"
        ]
      }
    },
    "include": [
      "src/**/*",
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "jest.config.js"
    ]
  }